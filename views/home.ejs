
<%-include("partials/header");-%>

<h1>Home</h1>
<p><%=homeContent%></p>


<% posts.forEach((post) => { %>
  <h2><%=post.title%></h2>

  <%if(post.content.length > 100){ %>
    <p><%=post.content.slice(0,100)%><a href="/posts/<%=post.title%>"</a> Read more...</a></p>
  <%}else{%>
    <p><%=post.content%></p>
  <%}%>

 <% }); %>




<%-include("partials/footer");-%>
